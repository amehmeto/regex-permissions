{
  "description": "Regex-based permission rules for Claude Code tools",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/check-permissions.js",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
